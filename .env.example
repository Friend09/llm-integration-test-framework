# LLM Integration Test Framework Environment Variables

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo  # Model to use for analysis

# Mock Mode Configuration
# Set to true to use mock data instead of making real API calls
MOCK_MODE=true

# Reporting Configuration
REPORT_OUTPUT_DIR=./reports
PDF_EXPORT_ENABLED=true

# Repository Configuration
TEMP_REPO_DIR=./temp_repos

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Analysis Configuration
ANALYSIS_TIMEOUT=300  # Timeout in seconds for analysis operations
